# Database
DATABASE_URL="postgresql://twiddle:twiddle@localhost:5432/twiddle?schema=public"

# Temporal
TEMPORAL_ADDRESS="localhost:7233"
TEMPORAL_TASK_QUEUE="twiddle-workflows"

# API Server
PORT=3000
HOST=0.0.0.0
APP_URL="http://localhost:5173"

# Redis
REDIS_URL="redis://localhost:6379"

# Encryption (generate a secure key for production)
ENCRYPTION_KEY="your-32-character-encryption-key"

# ============================================================================
# Authentication (Optional)
# Set AUTH_ENABLED=true to require SSO login
# ============================================================================
AUTH_ENABLED=false
AUTH_PROVIDER=azure-entra

# Azure Entra ID (formerly Azure AD) Configuration
# Required when AUTH_ENABLED=true and AUTH_PROVIDER=azure-entra
# 
# To configure:
# 1. Go to Azure Portal > Azure Active Directory > App registrations
# 2. Create a new registration or use existing
# 3. Set redirect URI to: http://localhost:3000/api/auth/callback
# 4. Create a client secret under "Certificates & secrets"
# 5. Copy the values below
AZURE_TENANT_ID="your-tenant-id"
AZURE_CLIENT_ID="your-client-id"
AZURE_CLIENT_SECRET="your-client-secret"
AZURE_REDIRECT_URI="http://localhost:3000/api/auth/callback"
