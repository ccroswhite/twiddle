{
  "name": "@twiddle/api",
  "version": "0.2.0",
  "private": true,
  "description": "Twiddle API server",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "test": "vitest"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.0",
    "@fastify/swagger": "^9.4.0",
    "@fastify/swagger-ui": "^5.2.0",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@temporalio/client": "^1.11.0",
    "@twiddle/nodes": "workspace:*",
    "@twiddle/shared": "workspace:*",
    "ajv": "^8.17.1",
    "cassandra-driver": "^4.8.0",
    "dotenv": "^16.4.0",
    "fastify": "^5.1.0",
    "mongodb": "^7.0.0",
    "mssql": "^12.2.0",
    "mysql2": "^3.16.0",
    "nanoid": "^5.0.0",
    "oracledb": "^6.10.0",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "presto-client": "^1.1.0",
    "redis": "^5.10.0",
    "snowflake-sdk": "^2.3.3",
    "ssh2": "^1.17.0",
    "tar": "^7.4.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/mssql": "^9.1.8",
    "@types/node": "^20.17.0",
    "@types/pg": "^8.15.6",
    "@types/ssh2": "^1.15.5",
    "pino-pretty": "^13.1.3",
    "prisma": "^7.2.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.15"
  }
}