{
  "name": "twiddle",
  "version": "0.1.0",
  "private": true,
  "description": "Workflow automation platform powered by Temporal",
  "author": "Twiddle Team",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:api": "pnpm --filter @twiddle/api dev",
    "dev:editor": "pnpm --filter @twiddle/editor dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:migrate": "pnpm --filter @twiddle/api db:migrate",
    "db:generate": "pnpm --filter @twiddle/api db:generate",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "@types/node": "^20.17.0",
    "turbo": "^2.3.0",
    "typescript": "^5.7.0",
    "prettier": "^3.4.0",
    "eslint": "^9.16.0"
  }
}